<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:ExamHotel.ViewModels"
        x:Class="ExamHotel.Views.InfoWindow"
        Title="Информация об отеле"
        Width="600"
        Height="600"
        x:DataType="viewModels:BookingViewModel">
    <DockPanel>
        <Button Name="BackButton"
                Content="Назад"
                DockPanel.Dock="Top"
                HorizontalAlignment="Left"
                Margin="10"/>

        <ScrollViewer>
            <StackPanel Name="MainStackPanel" 
                        Margin="20" 
                        Spacing="10">
                <!-- Здесь будут добавляться элементы в коде -->
                <Button Content="Забронировать"
                        Margin="0, 20, 0, 0"
                        IsEnabled="{Binding CanBookRoom}"
                        Click="BookRoom" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>