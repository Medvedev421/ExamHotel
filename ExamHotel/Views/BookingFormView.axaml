<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ExamHotel.Views.BookingFormView">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Имя:" />
        <TextBox Name="FirstNameTextBox" />
        <TextBlock Text="Фамилия:" />
        <TextBox Name="LastNameTextBox" />
        <TextBlock Text="Серия и номер паспорта:" />
        <TextBox Name="PassportSeriesNumberTextBox" />
        <TextBlock Text="Кем выдан паспорт:" />
        <TextBox Name="PassportIssuedByTextBox" />
        <TextBlock Text="Электронная почта:" />
        <TextBox Name="EmailTextBox" />
        <Button Content="Подтвердить" Click="OnConfirmButtonClick" />
    </StackPanel>
</UserControl>